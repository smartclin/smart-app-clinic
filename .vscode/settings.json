{
    // ================================
    // Performance & Memory Optimization
    // ================================
    "typescript.tsserver.maxTsServerMemory": 4096,
    "typescript.tsserver.watchOptions": {
        "watchFile": "useFsEvents",
        "watchDirectory": "useFsEvents",
        "fallbackPolling": "dynamicPriorityPolling"
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/**": true,
        "**/.next/**": true,
        "**/dist/**": true,
        "**/.turbo/**": true,
        "**/coverage/**": true
    },
    "search.followSymlinks": false,
    "editor.largeFileOptimizations": true,

    // ================================
    // Formatter & Linter Configuration
    // ================================
    "editor.defaultFormatter": "biomejs.biome",
    "[javascript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescript]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[javascriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[typescriptreact]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[json]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[css]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[scss]": {
        "editor.defaultFormatter": "biomejs.biome"
    },
    "[prisma]": {
        "editor.defaultFormatter": "Prisma.prisma"
    },
    "biome.configurationPath": "./biome.json",
    "biome.enabled": true,
    "biome.suggestInstallingGlobally": false,

    // ================================
    // TypeScript & Next.js Optimization
    // ================================
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.preferences.includePackageJsonAutoImports": "auto",
    "typescript.suggest.autoImports": true,
    "typescript.preferences.quoteStyle": "single",
    "typescript.inlayHints.parameterNames.enabled": "all",
    "typescript.inlayHints.variableTypes.enabled": true,
    "typescript.inlayHints.functionLikeReturnTypes.enabled": true,

    // ================================
    // Format & Save Actions
    // ================================
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false,
    "editor.formatOnType": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "always",
        "source.removeUnused.ts": "explicit",
        "source.sort.json": "explicit",
        "source.fixAll.biome": "explicit",
        "source.organizeImports.biome": "explicit",
        "source.addMissingImports.ts": "explicit",
        "source.removeUnusedImports": "explicit"
    },
    "editor.trimAutoWhitespace": true,
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,

    // ================================
    // Editor & UX Configuration
    // ================================
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": true,
    "editor.wordWrap": "off",
    "editor.minimap.enabled": true,
    "editor.minimap.scale": 1,
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    "editor.renderWhitespace": "boundary",
    "editor.renderControlCharacters": false,
    "editor.showUnused": true,
    "editor.codeLens": true,
    "editor.inlineSuggest.enabled": true,
    "editor.bracketPairColorization.enabled": true,
    "editor.guides.bracketPairs": true,
    "editor.folding": true,
    "editor.foldingHighlight": true,
    "editor.linkedEditing": true,
    "editor.smoothScrolling": true,

    // ================================
    // Suggestions & IntelliSense
    // ================================
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
    },
    "editor.suggestSelection": "recentlyUsed",
    "editor.suggest.showIcons": true,
    "editor.suggest.localityBonus": true,
    "editor.parameterHints.enabled": true,
    "editor.hover.enabled": true,
    "editor.wordBasedSuggestions": "matchingDocuments",
    "editor.snippetSuggestions": "inline",
    "editor.inlineSuggest.suppressSuggestions": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,

    // ================================
    // Emmet & HTML/React
    // ================================
    "emmet.includeLanguages": {
        "javascript": "javascriptreact",
        "typescript": "typescriptreact",
        "typescriptreact": "html"
    },
    "emmet.triggerExpansionOnTab": true,
    "emmet.showExpandedAbbreviation": "inMarkupAndStylesheetFilesOnly",

    // ================================
    // Files & Excludes
    // ================================
    "files.exclude": {
        "**/node_modules": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/.turbo": true,
        "**/generated": true,
        "**/migrations": true,
        "**/dist": true,
        "**/.next": true,
        "**/coverage": true,
        "**/build": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.next": true,
        "**/dist": true,
        "**/generated": true,
        "**/migrations": true,
        "**/.turbo": true,
        "**/coverage": true,
        "**/build": true,
        "**/yarn.lock": true,
        "**/package-lock.json": true
    },
    "files.autoSave": "onFocusChange",
    "files.associations": {
        "*.css": "tailwindcss"
    },

    "prisma.enableDiagnostics": true,
    "prisma.enableCodeLens": false,
    // ================================
    // Git Integration
    // ================================
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.autofetchPeriod": 180,
    "git.confirmSync": false,
    "git.openRepositoryInParentFolders": "always",

    // ================================
    // Extensions & Language Specific
    // ================================
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "tailwindCSS.includeLanguages": {
        "typescript": "javascript",
        "typescriptreact": "javascript"
    },
    "tailwindCSS.experimental.classRegex": [
        ["cva\\(([^)]*)\\)", "[\"'`]([^\"'`]*).*?[\"'`]"],
        ["cx\\(([^)]*)\\)", "(?:'|\"|`)([^']*)(?:'|\"|`)"]
    ],

    // ================================
    // Next.js Specific
    // ================================
    "typescript.suggest.completeFunctionCalls": true,

    // ================================
    // Accessibility & Workbench
    // ================================
    "workbench.colorTheme": "Default Dark+",
    "workbench.iconTheme": "vs-minimal",
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "newUntitledFile",
    "workbench.productIconTheme": "fluent-icons",
    "window.zoomLevel": 0,
    "breadcrumbs.enabled": true,
    "explorer.openEditors.visible": 5,
    "explorer.confirmDelete": false,
    "explorer.confirmDragAndDrop": false,

    // ================================
    // Terminal & Debugging
    // ================================
    "terminal.integrated.scrollback": 10000,
    "terminal.integrated.cursorBlinking": true,
    "debug.onTaskErrors": "showErrors",
    "debug.internalConsoleOptions": "openOnSessionStart"
}

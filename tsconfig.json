{
    "compilerOptions": {
        "allowJs": false,
        "esModuleInterop": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "esnext"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "noEmit": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/public/*": ["./public/*"]
        },
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2024" // Ensure you're targeting ESNext
    },
    "exclude": ["node_modules", "**/*.test.ts", "**/*.test.tsx", "**/*.spec.ts", "**/*.spec.tsx"],
    "include": [
        "src/**/*",
        "prisma/**/*",
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        ".next/dev/types/**/*.ts",
        "**/*.mts"
    ]
}
